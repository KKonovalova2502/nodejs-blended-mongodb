    "/users/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Login user",
        "operationId": "loginUser",
        "description": "Login user with payload",
        "security": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "example@gmail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "kop][popiu]"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login User",
            "headers": {
              "Set-Cookie": {
                "description": "Cookies set after successful login",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "sessionId=abc123; Path=/; HttpOnly\nrefreshToken=xyz456; Path=/; HttpOnly\n"
                  }
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in an user!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "accessToken"
                      ],
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "KM7lFdyoo+KoMu3Qayirz25TLatWquip65kZKxlZ"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/users/refresh": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Refresh user",
        "operationId": "refreshUser",
        "description": "Refresh user",
        "security": [],
        "parameters": [
          {
            "in": "cookie",
            "name": "sessionId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "abc123",
            "description": "Session ID of the user."
          },
          {
            "in": "cookie",
            "name": "refreshToken",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "abc123",
            "description": "Refresh token associated with the session."
          }
        ],
        "responses": {
          "200": {
            "description": "Refresh User",
            "headers": {
              "Set-Cookie": {
                "description": "Cookies set after successful Refresh",
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "example": "sessionId=abc123; Path=/; HttpOnly\nrefreshToken=xyz456; Path=/; HttpOnly\n"
                  }
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully refreshed a session!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "accessToken"
                      ],
                      "properties": {
                        "accessToken": {
                          "type": "string",
                          "example": "KM7lFdyoo+KoMu3Qayirz25TLatWquip65kZKxlZ"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "description": "Invalid session or refresh token.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "Session not found or expired"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Logout user",
        "operationId": "logoutUser",
        "description": "Logout user",
        "security": [],
        "parameters": [
          {
            "in": "cookie",
            "name": "sessionId",
            "required": true,
            "schema": {
              "description": "Session ID of the user",
              "type": "string",
              "example": "abc123"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "product": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "price",
          "category",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Product's id",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          },
          "name": {
            "description": "Product's name",
            "type": "string",
            "example": "Smartphone"
          },
          "price": {
            "description": "Product's price",
            "type": "number",
            "example": 150
          },
          "category": {
            "description": "Product's category",
            "type": "string",
            "enum": [
              "books",
              "electronics",
              "clothing",
              "other"
            ],
            "example": "other"
          },
          "userId": {
            "description": "Product's user id",
            "type": "string",
            "example": "688e532c4c845be353d862f0"
          },
          "createAt": {
            "description": "Time create a product",
            "type": "string",
            "example": "2025-08-02T21:55:32.143Z"
          },
          "updateAt": {
            "description": "Time update a product",
            "type": "string",
            "example": "2025-08-02T21:55:32.143Z"
          }
        }
      },
      "user": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email"
        ],
        "properties": {
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Jonh Doe"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "example@gmail.com"
          },
          "createAt": {
            "description": "Time create a product",
            "type": "string",
            "example": "2025-08-02T21:55:32.143Z"
          },
          "updateAt": {
            "description": "Time update a product",
            "type": "string",
            "example": "2025-08-02T21:55:32.143Z"
          }
        }
      }
    },
